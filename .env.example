# Copy to .env and fill in values. Do not commit .env.

# Postgres (used by docker-compose for the postgres service and for DATABASE_URL in the server container)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tablespot

# Server container: DATABASE_URL is set by docker-compose using postgres:5432.
# For host-side tools (Prisma Studio, psql), connect to Postgres using:
#   postgresql://POSTGRES_USER:POSTGRES_PASSWORD@localhost:5433/POSTGRES_DB
# (Host port 5433 is used to avoid conflict with a local Postgres on 5432.)

# App
NODE_ENV=development
PORT=4000

# JWT (adjust in production)
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS (comma-separated origins or * for dev)
CORS_ORIGINS=http://localhost:5173

# Bcrypt (optional, default 10)
BCRYPT_SALT_ROUNDS=10

# Cookies (HTTP-only auth)
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
FRONTEND_URL=http://localhost:5173

# Email (optional in dev; required for forgot-password in production)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
